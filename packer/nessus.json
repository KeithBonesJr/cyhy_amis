{
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-east-2",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "debian-stretch-hvm-x86_64-gp2-*",
                "root-device-type": "ebs"
            },
            "owners": [
                "379101102735"
            ],
            "most_recent": true
        },
        "instance_type": "m5.large",
        "ssh_username": "admin",
        "ami_name": "cyhy-nessus-hvm-{{timestamp}}-x86_64-ebs",
        "ami_regions": [
            "us-east-1",
            "us-west-1",
            "us-west-2"
        ],
        "region_kms_key_ids": {
            "us-east-1": "alias/aws/ebs",
            "us-west-1": "alias/aws/ebs",
            "us-west-2": "alias/aws/ebs"
        },

        "ami_block_device_mappings": [{
            "device_name": "xvda",
            "volume_size": 8,
            "volume_type": "gp2",
            "encrypted": true,
            "delete_on_termination": true
        }],

        "launch_block_device_mappings": [{
            "device_name": "xvda",
            "volume_size": 8,
            "volume_type": "gp2",
            "encrypted": true,
            "delete_on_termination": true
        }],

        "tags": {
            "Team": "NCATS OIS - Development",
            "Application": "Cyber Hygiene",
            "OS_Version": "Debian Stretch",
            "Release": "Latest",
            "Base_AMI_Name": "{{ .SourceAMIName }}"
        }
    }],

    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "packer/ansible/playbook.yml",
            "groups": [
                "nessus"
            ]
        }
    ]
}

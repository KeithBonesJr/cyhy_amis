{
    "builders": [{
        "type": "amazon-ebs",
        "region": "us-east-2",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "debian-jessie-amd64-hvm-*",
                "root-device-type": "ebs"
            },
            "owners": [
                "379101102735"
            ],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "admin",
        "ami_name": "cyhy-mongo-hvm-{{timestamp}}-amd64-ebs",
        "ami_regions": [
            "us-east-1"
        ],

        "tags": {
            "Team": "NCATS OIS - Development",
            "Application": "Cyber Hygiene",
            "OS_Version": "Debian Jessie",
            "Release": "Latest",
            "Base_AMI_Name": "{{ .SourceAMIName }}"
        }
    }],

    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "packer/ansible/playbook.yml",
            "groups": [
                "mongo",
                "debian"
            ]
        }
    ]
}
